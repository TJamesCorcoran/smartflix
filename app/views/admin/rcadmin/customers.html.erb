<div class="box">

<%= javascript_include_tag :defaults %>

<%= form_tag('javascript:void(0)') do -%>
Search through customers:
  <%= text_field_tag 'search', h(params[:q]) %>
  <%= observe_field :search,
                    :frequency => 0.5,
                    :update => 'searchResults',
                    :url => {:action => 'customers', :results_only => true, :only_path => false},
                    :with => "'q=' + encodeURIComponent(value)" %>
<% end -%>



<div id="searchResults">
<%= render :partial => 'customer_list' %>
</div>

</div>
