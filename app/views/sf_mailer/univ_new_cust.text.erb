<% ActionView::Base.send(:include, ApplicationHelper)
   ActionView::Base.send(:include, EmailHelper)
%>

<% if @customer.first_name.andand.empty_is_nil -%>
<%= h(@customer.first_name.capitalize) %>,

<% end -%>
<% if @ab_body == :chatty %>
<%=  render :partial => "sf_mailer/univ_reco/text/univ_reco_chatty"             , :locals => { :univ => @univ, :abtvid => @abtvid, :token => @token } %>
<% elsif @ab_body == :chatty_with_prices %>
<%=  render :partial => "sf_mailer/univ_reco/text/univ_reco_chatty_with_prices" , :locals => { :univ => @univ, :abtvid => @abtvid, :token => @token } %>
<% elsif @ab_body == :huckster %>
<%=  render :partial => "sf_mailer/univ_reco/text/univ_reco_huckster"           , :locals => { :univ => @univ, :abtvid => @abtvid, :token => @token } %>
<% elsif @ab_body == :focus_on_univ %>
<%=  render :partial => "sf_mailer/univ_reco/text/univ_reco_focus_on_univ"      , :locals => { :univ => @univ, :abtvid => @abtvid, :token => @token } %>
<%  else raise "error - unknown #{@ab_body}" %>
<% end %>

<%= render :partial => 'footer', :locals => { :univ => @univ, :abtvid => @abtvid, :token => @token, :customer => @customer } %>
